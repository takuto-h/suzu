
NATIVE_ENABLED = false
BYTE_ENABLED = true

BIN = $(dir bin)
SRC = $(dir src)

PROGRAM = $(BIN)/suzu

if $(not $(file-exists $(BIN)))
    mkdir $(BIN)

.DEFAULT: $(PROGRAM)

.SUBDIRS: $(SRC)

.PHONY: run
run: $(PROGRAM)
    $(PROGRAM)

.PHONY: clean
clean:
    rm $(filter-proper-targets $(ls R, .))
